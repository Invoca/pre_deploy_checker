<style>
.jira-issues, .jira-commits {
  margin-bottom: 3em;
}

.jira-issues-header {
  margin-bottom: 2em;
}

.table-with-border {
  border: 1px solid #ddd;
}

#jira_issues_clipboard {
  font-size: 13px;
  border: 1px solid #ccc;
}
#jira_issues_clipboard a {
  color: #15c;
}

/* dataTable overrides */
table.dataTable, table.dataTable.no-footer {
  border: 1px solid #ddd;
  border-top-width: 0;
}

table.dataTable thead th, table.dataTable thead td {
  border-color: #d0d0d0;
}

.table-deploy-email {
  box-sizing: border-box;
  border-collapse: collapse;
  border-spacing: 0;
  width: 572px;
  max-width: 100%;
  margin-bottom: 20px;
  font-size: 14px;
  border: 1px solid #cccccc;
  color: #333333;
  font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
}

.table-deploy-email-header {
  box-sizing: border-box;
}

.table-deploy-email-header-row {
  box-sizing: border-box;
  padding: 8px;
  text-align: left;
  line-height: 1.42857;
  vertical-align: bottom;
  border-top: 0;
  border-bottom: 2px solid #dddddd;
}

.table-deploy-email-body-shadow {
  background-color: #f9f9f9;
}

.table-deploy-email-body {
  box-sizing: border-box;
}

.table-deploy-email-row {
  box-sizing: border-box;
  padding: 8px;
  line-height: 1.42857;
  vertical-align: top;
  border-top: 1px solid #dddddd;
}
</style>
<body>
  <p>
    The following tickets have been deployed:
  </p>
  <div>
    <table class="table table-striped table-deploy-email" id="jira_issues_clipboard">
      <thead class="table-deploy-email-header">
        <tr class="table-deploy-email-body">
          <th class="table-deploy-email-header-row">Key</th>
          <th class="table-deploy-email-header-row" style="min-width: 300px">Summary</th>
        </tr>
      </thead>
      <tbody class="table-deploy-email-body">
      <% @jira_issues.each do |issue| %>
        <tr class="table-deploy-email-body <%= cycle('table-deploy-email-body-shadow', '') %>">
          <td nowrap class="table-deploy-email-row"><%=link_to(issue.key, issue.jira_url_for_issue, target: '_blank')%></td>
          <td class="table-deploy-email-row"><%=issue.summary%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</body>
